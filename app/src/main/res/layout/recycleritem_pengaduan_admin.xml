<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPengaduan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/mainadmin_pengaduan_item_bg">

        <View
            android:id="@+id/dotPengaduan"
            android:layout_width="9.23dp"
            android:layout_height="9.23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/dot_pengaduan_bg"/>

        <TextView
            android:id="@+id/tvNamaPengadu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nadira Belinda"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/bright_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/dotPengaduan"
            android:layout_marginStart="18.5dp"
            android:layout_marginTop="6.38dp"/>

        <TextView
            android:id="@+id/tvKet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Laporan pelanggaran terhadap komentar pengguna @"
            android:fontFamily="@font/nunito_medium"
            android:textColor="@color/cool_grey"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/tvNamaPengadu"
            app:layout_constraintStart_toEndOf="@id/dotPengaduan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="18.5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>