<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashscreenActivity"
    android:background="@color/tufts_blue">

    <ImageView
        android:id="@+id/ivLogotype"
        android:layout_width="245dp"
        android:layout_height="126dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivTangan"
        android:src="@drawable/splash_logotype"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/ivElipse"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/splash_elipse"
        android:layout_marginBottom="-88dp"/>

    <ImageView
        android:id="@+id/ivTangan"
        android:layout_width="257dp"
        android:layout_height="576dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/splash_hand"
        android:layout_marginBottom="-73dp"/>

    <ImageView
        android:id="@+id/ivFeathers"
        android:layout_width="292.5dp"
        android:layout_height="126.18dp"
        android:src="@drawable/splash_feathers"
        app:layout_constraintStart_toStartOf="@id/ivTangan"
        app:layout_constraintEnd_toEndOf="@id/ivTangan"
        app:layout_constraintTop_toTopOf="@id/ivTangan"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>