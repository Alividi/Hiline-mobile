<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_more_comment_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivIcEdit"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_pencilsimple" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Topik"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/bright_grey"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/ivIcEdit"
            app:layout_constraintBottom_toBottomOf="@id/ivIcEdit"
            app:layout_constraintStart_toEndOf="@id/ivIcEdit"
            android:layout_marginStart="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clEdit"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivIcHapus"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/tvHapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus Topik"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/bright_grey"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/ivIcHapus"
            app:layout_constraintBottom_toBottomOf="@id/ivIcHapus"
            app:layout_constraintStart_toEndOf="@id/ivIcHapus"
            android:layout_marginStart="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>