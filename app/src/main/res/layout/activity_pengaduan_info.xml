<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.forum.PengaduanInfoActivity"
    android:padding="30dp"
    android:background="@color/alice_blue">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_left" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPengaduanInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainadmin_pengaduan_item_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="8dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tvJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvVJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJam"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVJam"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvVTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTanggal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvAlasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alasan"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVTanggal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvVAlasan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAlasan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvPengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengirim"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVAlasan"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvVPengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPengirim"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvUnamePengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna Pengirim"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVPengirim"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvVUnamePengirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUnamePengirim"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvTerlapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terlapor"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVUnamePengirim"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvVTerlapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTerlapor"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvUnameTerlapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna Terlapor"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/cool_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVTerlapor"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvVUnameTerlapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUnameTerlapor"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/btnhapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Hapus"
        android:fontFamily="@font/nunito_regular"
        android:textColor="@color/valentine_red"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLihatKomen"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/mainuser_btn_edukasi_bg"
        android:text="Lihat Komentar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnhapus"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:outlineSpotShadowColor="@color/periwinkle_blue"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>