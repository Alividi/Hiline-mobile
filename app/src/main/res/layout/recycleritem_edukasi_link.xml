<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="22dp"
    android:id="@+id/cvLinks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="9dp"
    app:cardElevation="8dp"
    android:background="@android:color/transparent"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLinks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edukasi_card_links_bg">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum"
            android:fontFamily="@font/nunito_regular"
            android:textSize="16sp"
            android:textColor="@color/gravel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="11dp"/>

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="248dp"
            android:layout_height="16dp"
            android:text="Lorem ipsum dolor sit amet consectetur. Fringilla dui ut duis facilisis est justo hac mauris. Aenean neque pretium nullam euismod etiam neque eget vitae. Elementum euismod bibendum amet laoreet cras. Natoque eget sed semper diam nulla sed at natoque urna."
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/silver2"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>