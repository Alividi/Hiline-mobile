<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLayanan"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="23dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layananraya_item_bg">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLayananRaya"
                android:layout_width="67dp"
                android:layout_height="67dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="12dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/ivLayananRaya"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/layananraya_iv"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNamaLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS Siloam"
                android:fontFamily="@font/nunito_extrabold"
                android:textSize="18sp"
                android:textColor="@color/gravel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvLayananRaya"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tvKotaLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota Bogor"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/gravel"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/cvLayananRaya"
                app:layout_constraintTop_toBottomOf="@id/tvNamaLayanan"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tvProvinsiLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawa Barat"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/gravel"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/cvLayananRaya"
                app:layout_constraintTop_toBottomOf="@id/tvKotaLayanan"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>