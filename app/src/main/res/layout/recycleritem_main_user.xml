<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="11dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEdukasi"
        android:layout_width="267dp"
        android:layout_height="137dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/mainuser_rv_bg_1">

        <TextView
            android:id="@+id/tvKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Myth or Fact"
            android:fontFamily="@font/nunito_medium"
            android:textColor="@color/apricot"
            android:textSize="11sp"
            android:background="@drawable/mainuser_rv_tv_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="30dp"
            android:paddingStart="6.23dp"
            android:paddingEnd="6.23dp"/>

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="HIV menular melalui sentuhan atau bersin?"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="17.21dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKategori"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"/>
        
        <ImageView
            android:id="@+id/ivEdukasi"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp"
            android:src="@drawable/illus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>