<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.edukasi.EdukasiMoF"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_left" />

    <ImageView
        android:id="@+id/ivMoF"
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/edukasi_def_mof"
        android:layout_marginTop="175dp"/>

    <TextView
        android:id="@+id/tvMoF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loading.."
        android:fontFamily="@font/nunito_semibold"
        android:textSize="18sp"
        android:textColor="@color/gravel"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMoF"
        android:layout_marginTop="20dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMitos"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="Mitos"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_mitos_mof_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMoF"
        android:layout_marginTop="29dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFakta"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="Fakta"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_fakta_mof_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMitos"
        android:layout_marginTop="17dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>