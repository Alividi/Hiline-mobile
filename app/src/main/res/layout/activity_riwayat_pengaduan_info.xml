<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.RiwayatPengaduanInfoActivity"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/tvRiwayatPengaduan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Pengaduan"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/bright_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="16sp"
        android:textColor="@color/cool_grey"
        app:layout_constraintTop_toBottomOf="@id/tvRiwayatPengaduan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvVJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/bright_grey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvJam"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="16sp"
        android:textColor="@color/cool_grey"
        app:layout_constraintTop_toBottomOf="@id/tvVJam"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvVTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/07/2023"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/bright_grey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvAlasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alasan"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="16sp"
        android:textColor="@color/cool_grey"
        app:layout_constraintTop_toBottomOf="@id/tvVTanggal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvVAlasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spam"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/bright_grey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvTerlapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telapor"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="16sp"
        android:textColor="@color/cool_grey"
        app:layout_constraintTop_toBottomOf="@id/tvVAlasan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvVTelapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@\johndoeeee"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/bright_grey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTerlapor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHapus"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/btn_logout_dialog_bg"
        android:text="Hapus"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>