<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.forum.LaporkanKomentarLainnyaActivity"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/tvLaporkanKomentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporkan Komentar"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/gravel"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvAlasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alasan"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/bright_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLaporkanKomentar"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etAlasan"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        android:background="@drawable/alasan_bg"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="top"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLaporkan"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/btn_apricot_bg"
        android:text="Laporkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>