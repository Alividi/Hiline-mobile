<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.LaporkanKomentarActivity"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/tvLaporkanKomentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laporkan Komentar"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/gravel"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvAlasan1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:text="Komentar mengandung penghinaan dan pelecehan"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLaporkanKomentar"
        android:background="@drawable/alasan_bg"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:layout_marginTop="26dp"/>

    <TextView
        android:id="@+id/tvAlasan2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:text="Deskriminasi"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan1"
        android:background="@drawable/alasan_bg"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvAlasan3"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:text="Spam"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan2"
        android:background="@drawable/alasan_bg"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvAlasan4"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:text="Komentar mengungkapkan informasi pribadi"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan3"
        android:background="@drawable/alasan_bg"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvAlasan5"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:text="Komentar mengandung provokasi atau penghasutan"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan4"
        android:background="@drawable/alasan_bg"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvAlasanLainnya"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:text="Lainnya"
        android:fontFamily="@font/nunito_regular"
        android:textSize="14sp"
        android:textColor="@color/bright_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlasan5"
        android:background="@drawable/alasan_bg"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLanjut"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/btn_disable_bg"
        android:text="Lanjutkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp" />



</androidx.constraintlayout.widget.ConstraintLayout>